{
  "expo": {
    "name": "poultry360-mobile",
    "slug": "poultry360-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "primaryColor": "#4CAF50",
    "backgroundColor": "#ffffff",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.poultry360.app",
      "buildNumber": "1.0.0",
      "requireFullScreen": false,
      "userInterfaceStyle": "automatic",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to capture images for poultry records",
        "NSPhotoLibraryUsageDescription": "This app accesses photo library to select images for poultry records",
        "NSLocationWhenInUseUsageDescription": "This app uses location to tag farm locations",
        "UIBackgroundModes": [
          "background-fetch",
          "background-processing"
        ]
      }
    },
    "android": {
      "package": "com.poultry360.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#4CAF50",
      "androidMode": "default",
      "androidCollapsedTitle": "Poultry360"
    },
    "extra": {
      "apiUrl": "https://poultry360-api.onrender.com/api",
      "enableOfflineMode": true,
      "enableNotifications": true,
      "eas": {
        "projectId": "07c13788-360d-4d69-9d31-d65bed229d54"
      }
    }
  }
}
